# HackLoop Medical AI - Environment Variables Template
# Copy this file to .env and fill in your actual values

# SECURITY - Change these in production!
SECRET_KEY=your-ultra-secure-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# EMAIL CONFIGURATION
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# DATABASE
DATABASE_URL=sqlite:///hackloop_medical.db

# OPENROUTER AI (Optional - for chatbot functionality)
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# ML MODEL CONFIGURATION
MODEL_URL=https://github.com/iamsoura005/Dristi_Ai/releases/download/v1.0.0/eye_disease_model.h5

# PRODUCTION SETTINGS
FLASK_ENV=production
PYTHONPATH=/var/task:/var/task/backend
TF_CPP_MIN_LOG_LEVEL=2

# VERCEL SPECIFIC
VERCEL_URL=your-deployment-url.vercel.app